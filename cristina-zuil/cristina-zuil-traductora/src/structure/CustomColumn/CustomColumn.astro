---
import './CustomColumn.css';

interface Props {
  sm?: string;
  md?: string;
  lg?: string;
  'sm-push'?: string;
  'md-push'?: string;
  'lg-push'?: string;
  class?: string;
  id?: string;
}

const { 
  sm, 
  md, 
  lg, 
  'sm-push': smPush,
  'md-push': mdPush,
  'lg-push': lgPush,
  class: className,
  id 
} = Astro.props;
---

<custom-column 
  data-sm={sm}
  data-md={md}
  data-lg={lg}
  data-sm-push={smPush}
  data-md-push={mdPush}
  data-lg-push={lgPush}
  class={className}
  id={id}
>
  <slot />
</custom-column>