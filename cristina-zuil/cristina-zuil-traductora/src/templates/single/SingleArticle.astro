---
import { i18nConfig } from '../../config/i18n.js';

interface Props {
  item: any;
  archiveSlug: string;
  locale?: string;
}

const { item, archiveSlug, locale } = Astro.props;
const { title, content, publishedDate, featuredImage } = item;

const isDefaultLocale = !locale || locale === i18nConfig.defaultLocale;
const backPath = isDefaultLocale ? `/${archiveSlug}` : `/${locale}/${archiveSlug}`;
---

<a href={backPath} class="back-link">
  ‚Üê {isDefaultLocale ? 'Volver' : 'Back'}
</a>

<article class="article-detail">
  <header>
    <h1>{title}</h1>
    
    {publishedDate && (
      <time datetime={publishedDate} class="date">
        {new Date(publishedDate).toLocaleDateString(isDefaultLocale ? 'es-ES' : 'en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
    )}
  </header>
  
  {featuredImage?.url && (
    <img 
      src={`${i18nConfig.strapi.url}${featuredImage.url}`} 
      alt={title}
      class="featured-image"
    />
  )}
  
  <div class="content">
    {Array.isArray(content) ? (
      content.map((block: any) => (
        <div set:html={block.body || ''} />
      ))
    ) : (
      <div set:html={content} />
    )}
  </div>
</article>

<style>
  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: #0066cc;
    text-decoration: none;
  }
  
  .back-link:hover {
    text-decoration: underline;
  }
  
  .article-detail header {
    margin-bottom: 2rem;
  }
  
  .article-detail h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .date {
    color: #666;
    font-size: 0.95rem;
  }
  
  .featured-image {
    width: 100%;
    max-height: 500px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  
  .content {
    line-height: 1.8;
    font-size: 1.1rem;
  }
  
  .content :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
</style>